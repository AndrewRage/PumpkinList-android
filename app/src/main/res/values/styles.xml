<resources>

    <style name="ASlistTheme" parent="ASlistBase">

        <item name="windowActionBar">false</item>

    </style>

    <!-- Base application theme. -->
    <style name="ASlistBase" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <item name="android:textColorSecondary">@color/theme_secondary_text</item>
    </style>

    <style name="MyOverflowItemCollor" parent="">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ToolBarTheme" parent="ASlistBase">

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/theme_primary_text</item>

    </style>

    <style name="ToolBarEditText" parent="Widget.AppCompat.EditText" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/theme_toolbar_hint</item>
        <item name="android:textSize">@dimen/toolbar_edit_description_text_size</item>
    </style>

    <style name="ToolBarTitleEditText" parent="Widget.AppCompat.EditText" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/theme_toolbar_hint</item>
        <item name="android:textSize">@dimen/abc_text_size_title_material_toolbar</item>
    </style>

</resources>
