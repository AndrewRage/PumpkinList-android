<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light" >

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridView
            android:id="@+id/purchase_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:numColumns="@integer/purchase_list_item_columns"
            android:horizontalSpacing="@dimen/purchase_list_item_negative_padding"
            android:verticalSpacing="@dimen/purchase_list_item_negative_padding"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/plus_button"
            android:layout_width="@dimen/fab_button_size_big"
            android:layout_height="@dimen/fab_button_size_big"
            android:src="@drawable/ic_plus_white_24dp"
            android:background="@drawable/fab_theme_normal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/fab_button_right_margin"
            android:layout_marginEnd="@dimen/fab_button_right_margin"
            android:layout_marginBottom="@dimen/fab_button_bottom_margin"
            android:contentDescription="@string/app_name" />

    </RelativeLayout>

</LinearLayout>